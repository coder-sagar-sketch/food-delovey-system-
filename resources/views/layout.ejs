<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real-time Pizza App</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            clifford: '#da373d',
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <nav class="container mx-auto flex items-center  justify-between py-4">
  <div>
   <a href="/"><img src="/img/logo.png" alt="logo"></a>
  </div> 
  
  
  <div>
<ul class=" flex items-center  ">
    <li  class="mr-6  hover:scale-125  " ><a href="/"  class="">Menu</a></li>
    <li class="mr-6  hover:scale-125" ><a href="#" >offers</a></li>
    <% if(user) { %>
    <li  class="mr-6 hover:scale-125 ">
      <form id="logout" action="/logout" method="POST">
        <a onclick="document.getElementById('logout').submit()" 
        href="#">Logout</a>
    </form>
    </li>
    <%  }else { %>
    <li  class="mr-6 hover:scale-125 "><a href="/register" > Register</a></li>
    <li class="mr-6 hover:scale-125 " ><a href="/login" >Login</a></li>
    <%  } %>
    <li class="mr-6  hover:scale-125" ><a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center" >
      <span id="cartCounter" class="text-white font-bold pr-2"><%= session.cart ? session.cart.totalQty: '' %></span>
      <img src="/img/cart.png" alt="cart"></a></li>
     
    
</ul>
  </div>
</nav>
    <%- body %>
  <script src="/js/app.js" ></script>
</body>
</html>